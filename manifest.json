{
	"manifest_version" : 2,
	"name" : "test azamir notif", //TODO : changer le nom
	"short_name" : " Notifications Twitch", //TODO : changer le name
	"description" : "Génère une notification lorsque passe en live sur Twitch.", //TODO : changer la description
	"version" : "1.3.5",
	"author" : "Azamir",

	"permissions" : [
		"http://*/*",
		"https://*/*", 
		"notifications",
		"tabs",
		"storage"
	],
	"browser_action" : {

		"default_icon" : "img/logo_300.png", //TODO : changer l'icone par defaut
        "default_popup" : "popup.html"
	},


	"icons" : {
		"64" : "img/icon-on-64.png",//TODO : changer l'icone par defaut
		"128" : "img/icon-on-128.png"
	},

	"background" : {
		"scripts" : [
			"js/app.js",
			"js/jquery.js",
			"js/config.js",
			"js/background.js"
		]
	}


}